{
  "name": "auto-git",
  "displayName": "auto-git",
  "description": "Auto-Git is an extention to push project files to git in a predefined interval without taking any action by the developer.",
  "publisher": "gage",
  "version": "1.1.4",
  "engines": {
    "vscode": "^1.67.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ZeitnerGmbH/auto-git.git"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "automation",
    "git",
    "log",
    "commit",
    "push"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "autogit.version",
        "title": "Auto-Git: Version"
      },
      {
        "command": "autogit.init",
        "title": "Auto-Git: Init"
      },
      {
        "command": "autogit.start",
        "title": "Auto-Git: Start"
      },
      {
        "command": "autogit.stop",
        "title": "Auto-Git: Stop"
      },
      {
        "command": "autogit.restart",
        "title": "Auto-Git: Restart"
      },
      {
        "command": "hello-world.helloWorld",
        "title": "Sam is smart"
      },
      {
        "command": "controls.start",
        "title": "Page Controls"
      },
      {
        "command": "afk.on",
        "title": "AFK On"
      },
      {
        "command": "afk.off",
        "title": "AFK Off"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "afk",
          "title": "AFK",
          "icon": "$(watch)"
        }
      ]
    },
    "views": {
      "afk": [
        {
          "id": "afk-panel",
          "name": ""
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "afk-panel",
        "contents": "Suspends session for as long as the user keeps this setting on.\n[On](command:afk.on)",
        "when": "onCommand:afk.on"
      },
      {
        "view": "afk-panel",
        "contents": "current time is: .\n[Off](command:afk.off)",
        "when": "onCommand:afk.off"
      }
    ],
    "markdown.markdownItPlugins": true,
    "markdown.previewStyles": [
      "./dist/base.css",
      "./dist/github-markdown.css",
      "./dist/highlight-js.css"
    ],
    "configuration": [
      {
        "title": "Markdown Preview Github Styling",
        "properties": {
          "markdown-preview-github-styles.colorTheme": {
            "type": "string",
            "description": "Color theme for the styling of the Markdown preview.",
            "enum": [
              "auto",
              "system",
              "light",
              "dark"
            ],
            "enumDescriptions": [
              "Automatically match the editor color theme.",
              "Sync to the system/OS color theme.",
              "Always use the Github site's light theme.",
              "Always use the Github site's dark theme."
            ],
            "default": "auto"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/isomorphic-fetch": "^0.0.36",
    "@types/mocha": "^9.1.1",
    "@types/node": "14.x",
    "@types/vscode": "^1.67.0",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.14.0",
    "github-markdown-css": "^5.0.0",
    "glob": "^8.0.1",
    "mocha": "^9.2.2",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.2.0",
    "fetch": "^1.1.0",
    "highlight.js": "^11.7.0",
    "isomorphic-fetch": "^3.0.0",
    "markdown-it": "^13.0.1",
    "path": "^0.12.7",
    "shiki": "^0.11.1",
    "simple-git": "^3.7.1"
  }
}
